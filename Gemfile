  gem 'minitest-rails'
  gem 'fabrication'
  gem 'webmock'
  gem 'vcr', '~>2.5.0'
end

gem 'puma'

gem 'pry-rails'

gem 'simple_form'

gem 'sidekiq', '~> 2.12.4'
gem 'sinatra', '>= 1.3.0', :require => nil

gem 'letter_opener', group: :development

group :doc do
  # bundle exec rake doc:rails generates the API under doc/api.
  gem 'sdoc', require: false
end

